.checkboxes
	margin-bottom 50px
	
.content_checkboxes
	
	margin-bottom 25px
	
.checkboxes__list
	display flex
	
	width 100%
	
.checkboxes__column
	min-width 245px
	margin-right 15px
	&:nth-child(2)
		margin-right 20px

		
.checkboxes__item
	display flex
	
	margin-bottom 14px
	
.checkboxes__checkbox
	display none
	&:checked
		+ .checkboxes__checkbox-custom
			&:before
				display block
		
	
.checkboxes__checkbox-custom
	width 19px
	height 18px
	
	border-radius 3px
	
	margin-right 10px
	
	position relative

	background-image url('../../img/sprite.png')
	background-position -5px -5px
	
	
	
	&:before
		content ''
		
		display none
		
		width 21px
		height 27px
		
		position absolute
		top -10px
		left 3px
		
		background-image url('../../img/sprite.png')
		background-position -34px -5px
		
		
		
	
.checkbox__checkbox-text
	font-weight 700
	font-size 21px
	
	color #000
	
.checkboxes__checkbox-link
	color  #1f5f97
	